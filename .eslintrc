{
  "extends": [
    "react-app",
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-use-before-define": [2, { "functions": false }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/sort-prop-types": 2,
    "react/jsx-sort-props": 1,
    "no-underscore-dangle": 0,
    "prettier/prettier": ["error", {
      "semi": false,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": false
    }]
  },
  "env": {
    "mocha": true,
    "browser": true
  }
}
